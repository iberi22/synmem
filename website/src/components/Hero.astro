<section class="pt-32 pb-20 md:pt-40 md:pb-32 relative overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-accent-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="section-container">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary-500/10 border border-primary-500/20 text-primary-400 text-sm font-medium mb-8">
        <span class="w-2 h-2 rounded-full bg-primary-400 animate-pulse"></span>
        Open Source MCP Server
      </div>

      <!-- Main heading -->
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-extrabold tracking-tight mb-6">
        Give your AI agent<br />
        <span class="gradient-text">a memory</span>
      </h1>

      <!-- Subheading -->
      <p class="text-lg md:text-xl text-gray-400 max-w-2xl mx-auto mb-10 leading-relaxed">
        SynMem enables AI assistants to browse, scrape, and remember web content. 
        Build powerful automations with persistent memory and intelligent navigation.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16">
        <a href="#install" class="btn-primary text-lg px-8 py-4">
          Install Extension
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14" />
            <path d="m12 5 7 7-7 7" />
          </svg>
        </a>
        <a
          href="https://github.com/iberi22/synmem"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-secondary text-lg px-8 py-4"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          View on GitHub
        </a>
      </div>

      <!-- Code snippet -->
      <div class="relative max-w-3xl mx-auto">
        <div class="card">
          <div class="flex items-center gap-2 mb-4 pb-4 border-b border-gray-800">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
            <span class="text-gray-500 text-sm ml-2 font-mono">mcp-config.json</span>
          </div>
          <pre class="text-left text-sm overflow-x-auto"><code class="language-json" set:html={`<span class="text-gray-500">{</span>
  <span class="text-primary-400">"mcpServers"</span>: <span class="text-gray-500">{</span>
    <span class="text-primary-400">"synmem"</span>: <span class="text-gray-500">{</span>
      <span class="text-primary-400">"command"</span>: <span class="text-accent-400">"synmem-server"</span>,
      <span class="text-primary-400">"args"</span>: [<span class="text-accent-400">"--stdio"</span>]
    <span class="text-gray-500">}</span>
  <span class="text-gray-500">}</span>
<span class="text-gray-500">}</span>`}></code></pre>
        </div>
      </div>
    </div>
  </div>
</section>
