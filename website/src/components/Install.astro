<section id="install" class="py-20 md:py-32 bg-gray-900/50">
  <div class="section-container">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Get started in <span class="gradient-text">minutes</span>
        </h2>
        <p class="text-gray-400 text-lg">
          Choose your preferred installation method
        </p>
      </div>

      <!-- Installation tabs -->
      <div class="card">
        <div class="flex border-b border-gray-800 mb-6">
          <button class="install-tab px-4 py-2 text-sm font-medium text-primary-400 border-b-2 border-primary-400" data-tab="cargo">
            Cargo (Rust)
          </button>
          <button class="install-tab px-4 py-2 text-sm font-medium text-gray-400 hover:text-white border-b-2 border-transparent" data-tab="npm">
            NPM
          </button>
          <button class="install-tab px-4 py-2 text-sm font-medium text-gray-400 hover:text-white border-b-2 border-transparent" data-tab="extension">
            Extension
          </button>
        </div>

        <!-- Cargo tab -->
        <div id="cargo-content" class="install-content">
          <p class="text-gray-400 mb-4">Install the SynMem CLI using Cargo:</p>
          <div class="bg-gray-950 rounded-lg p-4 font-mono text-sm overflow-x-auto">
            <code class="text-gray-300">
              <span class="text-gray-500">$</span> cargo install synmem-cli
            </code>
          </div>
          <p class="text-gray-500 text-sm mt-4">Then configure Claude Desktop or your MCP client.</p>
        </div>

        <!-- NPM tab -->
        <div id="npm-content" class="install-content hidden">
          <p class="text-gray-400 mb-4">Install via NPM (wrapper for prebuilt binaries):</p>
          <div class="bg-gray-950 rounded-lg p-4 font-mono text-sm overflow-x-auto">
            <code class="text-gray-300">
              <span class="text-gray-500">$</span> npm install -g synmem
            </code>
          </div>
          <p class="text-gray-500 text-sm mt-4">Coming soon - currently in development.</p>
        </div>

        <!-- Extension tab -->
        <div id="extension-content" class="install-content hidden">
          <p class="text-gray-400 mb-4">Install the Chrome extension for enhanced browser integration:</p>
          <div class="flex gap-4">
            <a
              href="#"
              class="btn-secondary inline-flex items-center gap-2"
            >
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93s3.05-7.44 7-7.93v15.86zm2-15.86c1.03.13 2 .45 2.87.93H13v-.93zM13 7h5.24c.25.31.48.65.68 1H13V7zm0 3h6.74c.08.33.15.66.19 1H13v-1zm0 3h6.93c-.04.34-.11.67-.19 1H13v-1zm0 3h5.92c-.2.35-.43.69-.68 1H13v-1zm0 3v-.93c.87.48 1.84.8 2.87.93H13z"/>
              </svg>
              Chrome Web Store
            </a>
          </div>
          <p class="text-gray-500 text-sm mt-4">Coming soon - extension is in development.</p>
        </div>
      </div>

      <!-- MCP Configuration -->
      <div class="mt-8">
        <h3 class="text-xl font-semibold text-white mb-4">Configure MCP Client</h3>
        <div class="card">
          <p class="text-gray-400 mb-4">Add SynMem to your Claude Desktop configuration:</p>
          <div class="bg-gray-950 rounded-lg p-4 font-mono text-sm overflow-x-auto">
            <pre class="text-gray-300"><code set:html={`<span class="text-gray-500">// ~/Library/Application Support/Claude/claude_desktop_config.json</span>
{
  <span class="text-primary-400">"mcpServers"</span>: {
    <span class="text-primary-400">"synmem"</span>: {
      <span class="text-primary-400">"command"</span>: <span class="text-accent-400">"synmem-server"</span>,
      <span class="text-primary-400">"args"</span>: [<span class="text-accent-400">"--stdio"</span>]
    }
  }
}`}></code></pre>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const tabs = document.querySelectorAll('.install-tab');
  const contents = document.querySelectorAll('.install-content');

  tabs.forEach((tab) => {
    tab.addEventListener('click', () => {
      const targetTab = tab.getAttribute('data-tab');

      // Update tab styles
      tabs.forEach((t) => {
        t.classList.remove('text-primary-400', 'border-primary-400');
        t.classList.add('text-gray-400', 'border-transparent');
      });
      tab.classList.remove('text-gray-400', 'border-transparent');
      tab.classList.add('text-primary-400', 'border-primary-400');

      // Show/hide content
      contents.forEach((content) => {
        content.classList.add('hidden');
      });
      document.getElementById(`${targetTab}-content`)?.classList.remove('hidden');
    });
  });
</script>
