---
const features = [
  {
    icon: 'globe',
    title: 'Smart Scraping',
    description: 'Extract structured content from any webpage. Site-specific scrapers for Gemini, ChatGPT, Claude, Twitter, and more.',
    isPrimary: true,
  },
  {
    icon: 'compass',
    title: 'Intelligent Navigation',
    description: 'Navigate, click, type, and interact with pages programmatically. LLM-guided automation for complex workflows.',
    isPrimary: false,
  },
  {
    icon: 'database',
    title: 'Persistent Memory',
    description: 'Store and search your browsing history with semantic search. Give your AI context that persists across sessions.',
    isPrimary: true,
  },
  {
    icon: 'zap',
    title: 'Blazing Fast',
    description: 'Built in Rust with Rayon parallelization. Scrape batches of pages in milliseconds, not seconds.',
    isPrimary: false,
  },
  {
    icon: 'plug',
    title: 'MCP Protocol',
    description: 'Integrates seamlessly with Claude Desktop, Cursor, and any MCP-compatible AI assistant.',
    isPrimary: true,
  },
  {
    icon: 'shield',
    title: 'Privacy First',
    description: 'All data stays local. Encrypted storage with AES-256-GCM. Your browsing history, your control.',
    isPrimary: false,
  },
];

const getIcon = (name: string) => {
  const icons: Record<string, string> = {
    globe: '<path d="M12 2a10 10 0 1 0 0 20 10 10 0 0 0 0-20z"/><path d="M2 12h20"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>',
    compass: '<circle cx="12" cy="12" r="10"/><polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"/>',
    database: '<ellipse cx="12" cy="5" rx="9" ry="3"/><path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/><path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/>',
    zap: '<polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>',
    plug: '<path d="M12 22v-5"/><path d="M9 8V2"/><path d="M15 8V2"/><path d="M18 8v5a4 4 0 0 1-4 4h-4a4 4 0 0 1-4-4V8Z"/>',
    shield: '<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>',
  };
  return icons[name] || '';
};
---

<section id="features" class="py-20 md:py-32">
  <div class="section-container">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Everything your AI needs to <span class="gradient-text">browse the web</span>
      </h2>
      <p class="text-gray-400 text-lg">
        A complete toolkit for web automation, content extraction, and persistent memory.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature) => (
        <div class="card group hover:border-gray-700 transition-all duration-300">
          <div class:list={[
            "w-12 h-12 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300",
            feature.isPrimary ? "bg-primary-500/10" : "bg-accent-500/10"
          ]}>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class:list={[
                "w-6 h-6",
                feature.isPrimary ? "text-primary-400" : "text-accent-400"
              ]}
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              set:html={getIcon(feature.icon)}
            />
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">{feature.title}</h3>
          <p class="text-gray-400 leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
